<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.caloriemonitor.CalorieHelperActivity">

    <TextView
        android:id="@+id/txtSearchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search food:"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="38dp"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etSeachName" />

    <EditText
        android:id="@+id/etSeachName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="83dp"
        android:layout_below="@+id/txtSearchLabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp" />

    <Button
        android:id="@+id/btnSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_alignTop="@+id/etSeachName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp" />

    <ListView
        android:id="@+id/listview_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/btnSearchButton"
        android:layout_alignStart="@+id/etSeachName"
        android:layout_below="@+id/btnSearchButton"
        android:layout_marginTop="22dp" />
</RelativeLayout>
